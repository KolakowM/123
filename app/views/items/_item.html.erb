<div id="<%= dom_id item %>">
  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= item.body %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= item.content %>
  </p>

</div>

<section class="bg-light" >
  <div class="container-fluid">
    <div class="card mx-auto text-center">

      <h2 class="card-title"><%= item.name %></h2>

      <% if item.cover_image.attached?%>
        <%= image_tag item.cover_image, class: "custom-class rounded", style: "max-height: auto; width: auto;" %>
      <% else %>
        <%= image_tag "1.jpg", class: "rounded", height:"100%",width:"100%" %>
      <% end %>

      <div class="card-body d-flex flex-column justify-content-center">

        <p class="card-text"><%= item.content %></p>
      </div>
    </div> <%= link_to "PodglÄ…d", item, class:"btn btn-info" %>
  </div>
</section>
